<%= simple_form_for [:admin, @product] do |f| %>
			<div>
				<%= f.input :title %>
				<%= f.input :description %>
				<%= f.input :quantity %>
				<%= f.input :price %>
			</div>
			
			<div>
				<%= f.simple_fields_for :photo do |c| %>
					<%= c.input :image, as: :file %>
				<% end %>
			</div>
			<div>
				<%= f.button :submit, data: {disable_with: "Submitting..."} %>
				<%= link_to "Back", admin_products_path, class: "btn btn-default" %>
			</div>
		<% end %>