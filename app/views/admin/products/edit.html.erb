<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2 class="text-center">Edit Product</h2>
		<%= simple_form_for [:admin, @product] do |f| %>
			<div>
				<%= f.input :title %>
				<%= f.input :description %>
				<%= f.input :quantity %>
				<%= f.input :price %>
			</div>
			<div>
				<% if @photo.present? %>
					<span>商品圖</span> <br>
					<%= image_tag(@photo.image.thumb.url) %>
				<% else %>
					<%= image_tag("https://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
				<% end %>
			</div>
			<div>
				<%= f.simple_fields_for :photo do |c| %>
					<%= c.input :image, as: :file %>
				<% end %>
			</div>
			<div>
				<%= f.button :submit, data: {disable_with: "Submitting..."} %>
				<%= link_to "Back", admin_products_path, class: "btn btn-default" %>
			</div>
		<% end %>
	</div>
</div>

