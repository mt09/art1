<div class="row">
	<div class="col-md-12">
		<h2>商品明細</h2>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>商品</th>
					<th>單價</th>
				</tr>
			</thead>
			<tbody>
				<% @order.items.each do |order_item| %>
				<tr>
					<td><%= order_item.product_name %></td>
					<td><%= order_item.price %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<div class="total clearfix">
			<span class="pull-right">
				總計 <%= @order.total %> 元
			</span>
		</div>

		<hr>

		<h2>訂單資訊</h2>
		<table class="table table-bordered table-striped">
			<tbody>
				<tr>
					<td>訂購人</td>
				</tr>
				<tr>
					<td><%= @order_info.billing_name %> = <%= @order_info.billing_address %></td>
				</tr>
				<tr>
					<td>收貨人</td>
				</tr>
				<tr>
					<td><%= @order_info.shipping_name %> = <%= @order_info.shipping_address %></td>
				</tr>
			</tbody>
		</table>

		<br>

		<% if !@order.is_paid? %>
			<div class="pull-right">
				<%= link_to "信用卡付款", pay_with_credit_card_order_path(@order.token), class: "btn btn-danger btn-lg" %>
				<%= link_to "ATM付款", "#", class: "btn btn-danger btn-lg" %>
			</div>
		<% else %>
			<p class="text-center" style="text-decoration:underline; font-size:30px;">
				此訂單已完成付款
			</p>
		<% end %>
	</div>
</div>