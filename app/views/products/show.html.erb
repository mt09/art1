<div class="row">
	<div class="col-md-6">
		<% if @product.photo.present? %>
			<%= image_tag(@product.photo.image.medium.url, class: "thumbnail") %>
		<% else %>
			<%= image_tag("https://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
		<% end %>
	</div>
	<div class="col-md-6">
		<h2><%= @product.title %></h2>
		<p><%= @product.description %></p>
		<div style="font-size:20px; padding-top:100px;">
			數量: <%= @product.quantity %>
		</div>
		<div class="product-price">
			價格 <%= @product.price %> 元
		</div>
		<div class="pull-right">
			<%= link_to "Add to Cart", "#", class: "btn btn-danger btn-lg" %>
		</div>
	</div>
</div>